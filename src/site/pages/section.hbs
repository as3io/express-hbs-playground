{{#content-for "head"}}
  <title>{{section.metadata.title}} | {{site.name}}</title>
  <meta name="description" content="{{section.metadata.description}}">
  <link rel="canonical" href="{{requestOrigin}}{{canonicalPath}}">
{{/content-for}}

<div class="container-fluid">
  <div class="row">
    <div class="col my-3" style="padding-left:6rem; padding-right:6rem;">
      <section
        data-id="{{section.id}}"
        class="website-section website-section--display website-section--{{replace section.alias "/" "-"}}"
      >
        <div class="row mb-3">
          <div class="col">
            {{placeholder-ad size="970x90"}}
          </div>
        </div>

        <h1 class="website-section__name">{{section.name}}</h1>
        <p class="website-section__description">{{section.description}}</p>
        <hr>

        <div class="row">

        </div>
      </section>
    </div>
  </div>
</div>
